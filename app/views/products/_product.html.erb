<%# <%= paginate @products %>
<div class="columns">
  <div class="column">
    <%= form_with url: cart_index_path, method: :post do %>
      <ul><img src="<%=product.image_link%>" width="100px" onerror="this.src='https://www.schoolonlineuniversity.com/uploads/thumbnails/course_thumbnails/16.jpg'">
      <h3><%= link_to product.name, product %></h3>
      <p>Price: <%= product.price %></p>
      <p><%= product.description %></p>
    <% end %>
  </div>
</div>


          <% if cart.include?(product) %>
        <%= button_to cart_path(product), method: :delete do%>
          ➖ Remove From cart
        <% end %>
      <% else %>
        <%= form_with url: cart_index_path, method: :post do%>
          <%= hidden_field_tag(:id,product.id) %>
          <%= button_tag 'Add to cart ✅' %>
        <% end %>
      <% end %>